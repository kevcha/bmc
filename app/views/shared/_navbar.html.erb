<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= icon('credit-card-alt') %> BMC
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Retirement", "http://bluemagic.info/funds/retirement-fund/", class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %>
      <%= link_to "Dynamic", "http://bluemagic.info/funds/dynamic-fund/", class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %>
      <%= link_to "Extrem", "http://bluemagic.info/funds/extrem-fund/", class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %>
      <span class="divider"></span>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Retirement", "http://bluemagic.info/funds/retirement-fund/", class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %></li>
            <li><%= link_to "Dynamic", "http://bluemagic.info/funds/dynamic-fund/", class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %></li>
            <li><%= link_to "Extrem", "http://bluemagic.info/funds/extrem-fund/", class: "navbar-wagon-item navbar-wagon-link", target: "_blank" %></li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>

